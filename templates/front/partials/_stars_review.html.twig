<!-- This template is used to display the Algo rating review for the reviews   -->

{# Algo rating review #}

{% set star = 0 %}

{# ! ALGO 1 #}
{# Fill stars #}
	{% for i in 1..5 %}
		{% if i <= rating %}<i class="bi bi-star-fill show__icon"> </i>
		{# when I add a star I set to my counter of star #}
		{% set star = star + 1 %}
	{% endif %}
{% endfor %}

{# Empty stars #}
{# if I don't already have 5 stars #}
	{% if star < 5 %}
	{# I add miss star to have 5 stars #}
		{% for i in 1..(5 - star) %}<i class="bi bi-star show__icon"> </i>
	{% endfor %}
{% endif %}
{% extends 'base.html.twig' %}

{% block title %}Notre album !{% endblock %}

{% block body %}
<!-- Display the album -->
<section id="our-album" aria-labelledby="album-musique" class="misc__wrapper">
	<div class="container mt-3">
		<div class="card border-0">
			<div class="card-body d-flex flex-column">
				<h2 class="card-title">A Journey Across the Universe</h2>
				<div class="title">
						<div>
							Galactic Adventure
						</div>
					</div>
				<div class="d-flex flex-row justify-content-center mt-3 gap-3">
					<img src="{{asset('images/OGalaxy-Galactic-Adventure-Vinyle.png')}}" alt="Jaquette du vinyl Galactic Adventure">
					<div class="cassette d-none d-lg-block">
						<div class="label">
							<div class="text__album">
								Galactic Adventure
							</div>
							<div class="central">
								<div class="tape left">
									<div class="arc">
										<div class="axis"></div>
									</div>
								</div>
								<div class="tape right">
									<div class="arc">
										<div class="axis"></div>
									</div>
								</div>
							</div>
						</div>
						<div class="bottom">
							<div class="screw"></div>
							<div class="inner">
								<div class="screw"></div>
								<div class="screw"></div>
							</div>
							<div class="screw"></div>
						</div>
					</div>
				</div>
					<div class= "d-flex flex-row align-content-center">
						<button class="play" id="playButton" role="button" aria-label="Bouton pour jouer la musique">Play</button>
						<button class="stop" id="stopButton" style="display: none;" role="button" aria-label="Bouton pour arrÃªter la musique">Stop</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

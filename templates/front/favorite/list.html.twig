{% extends 'base.html.twig' %}

{% block title %}Vos favoris !{% endblock %}

{% block body %}
<!-- Display the favorite -->
<section id="favorite-list" aria-labelledby="favorite-list-title">
	<!-- Flash Message -->
    {% for message in app.flashes('favorite warning') %}
		<div class="alert alert-danger d-flex align-items-center justify-content-center m-3" role="alert">
			{{ message }}
		</div>
	{% endfor %}
    <!-- End Flash Message -->
	<div class="container">
		<h2 class="pt-4 home__bigtitle mt-4 text-center">
			Vos favoris
		</h2>
			<div class="d-flex flex-column align-items-center mt-3">
				<a href="{{ path('app_front_favorite_empty')}}" class="btn list__btn d-inline-block align-self-center" role="button" aria-label="Bouton pour vider la liste des favoris">Vider votre liste de favoris</a>
			</div>
		<div class="d-flex flex-column flex-lg-row justify-content-center">
			{% for expedition in expeditionList %}
			<div class="mx-5 my-3 d-flex flex-row justify-content-center">
				<div id="home__next__border" class="card d-flex mb-3" style="width: 15rem;">
					<img src="{{ expedition.picture }}" class="card-img-top rounded-pill w-100" alt="Paysage de {{ expedition.title}}">
					<div class="card-body d-flex align-items-center flex-column home__card__bg">
						<h5 class="card-title home__title mb-3">
							{{ expedition.title}}
						</h5>
						<div>
							<a href="{{ path ('app_front_expedition_show', {id: expedition.id}) }}" class="btn list__btn me-1"role="button" aria-label="Bouton pour voir l'expédition choisie">Voir</a>
							<a href="{{ path('app_front_favorite_remove', {id: expedition.id})}}" role="button" aria-label="Bouton pour supprimer l'expédition choisie" class="btn remove__btn">
								<i class="bi bi-x-lg"></i>
							</a>
						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endblock %}
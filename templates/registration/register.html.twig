{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<!-- Create a registration-->
<section id="create-register" aria-labelledby="create-register-title">
<div class="container col-12 col-lg-6 my-4">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger d-flex align-items-center justify-content-center m-3" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h3 id="list__bigtitle" class="display-4">Créer un compte</h3>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'aria-describedby': 'form-errors'}}) }}
        <div class="mt-3">
            <div class="login__color">
                {{ form_label(registrationForm.pseudo, 'Ton pseudo, tu inventeras...') }}
            </div>
            {{ form_widget(registrationForm.pseudo) }}
            {{ form_help(registrationForm.pseudo) }}
            {{ form_errors(registrationForm.pseudo) }}
        </div>
        <div class="mt-3">
            <div class="login__color">
                {{ form_label(registrationForm.firstname, 'Ton prénom, tu indiqueras...') }}
            </div>
            {{ form_widget(registrationForm.firstname) }}
            {{ form_help(registrationForm.firstname) }}
            {{ form_errors(registrationForm.firstname) }}
        </div>
        <div class="mt-3">
            <div class="login__color">
                {{ form_label(registrationForm.lastname, 'Ton nom, tu dévoileras...') }}
            </div>
            {{ form_widget(registrationForm.lastname) }}
            {{ form_help(registrationForm.lastname) }}
            {{ form_errors(registrationForm.lastname) }}
        </div>
        <div class="mt-3">
            <div class="login__color">
                {{ form_label(registrationForm.email, 'Ton email, tu renseigneras...') }}
            </div>
            {{ form_widget(registrationForm.email) }}
            {{ form_help(registrationForm.email) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="mt-3">
            <div class="login__color">
                {{ form_label(registrationForm.plainPassword, 'Ton mot de passe, tu créeras...') }}
            </div>
            {{ form_widget(registrationForm.plainPassword) }}
            {{ form_help(registrationForm.plainPassword) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <div class="login__color mt-3">
            {{ form_row(registrationForm.agreeTerms, { 'label': 'Les conditions d\'utilisation, tu accepteras.', 'attr': {'aria-describedby': 'agree-terms-error'}}) }}
            {{ form_errors(registrationForm.agreeTerms, {'id': 'agree-terms-error'}) }}
        </div>
        <button type="submit" class="btn login__btn" aria-label="Bouton pour s'inscrire">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
</section>
{% endblock %}
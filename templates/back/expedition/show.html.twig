{% extends 'back/backoffice.html.twig' %}

{% block title %}Voyage sur {{ expeditionShow.title }}{% endblock %}

{% block body %}
<!-- Display the details of an expedition-->
<section id="show-expedition-{{ expeditionShow.title }}" aria-labelledby="show-one-expedition">
    <div class="container my-4 col-8">
        <h3 class="page__title">Voyage sur {{ expeditionShow.title }}</h3>
        <a class="btn return__btn mt-3" href="{{ path('app_admin_expedition_list') }}" role="button" aria-label="Bouton de retour à la liste des expéditions">Retour à la liste</a>

        <table role="presentation" class="table mt-3">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ expeditionShow.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ expeditionShow.title }}</td>
                </tr>
                <tr>
                    <th>Destination</th>
                    <td>{{ expeditionShow.destination }}</td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ expeditionShow.price }}€</td>
                </tr>
                <tr>
                    <th scope="row">Départ</th>
                    <td>{{ expeditionShow.departure|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th scope="row">Durée</th>
                    <td>{{ expeditionShow.duration }}</td>
                </tr>
                <tr>
                    <th scope="row">Passagers</th>
                    <td>{{ expeditionShow.passenger }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ expeditionShow.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Photo</th>
                    <td>{{ expeditionShow.picture }}</td>
                </tr>
                <tr>
                    <th scope="row">Crée le</th>
                    <td>{{ expeditionShow.createdAt ? expeditionShow.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Modifiée le</th>
                    <td>{{ expeditionShow.updatedAt ? expeditionShow.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex gap-3">
            <a class="btn btn-warning update__btn" href="{{ path('app_admin_expedition_update', {'id': expeditionShow.id}) }}" role="button" aria-label="Bouton pour modifier une expédition">Modifier</a>
            {{ include('back/expedition/_delete_form.html.twig') }}
        </div>
    </div>
</section>
{% endblock %}